    <record id="report_invoice_alba" model="ir.actions.report">
        <field name="name">Report Invoice alba</field>
        <field name="model">account.move</field>
        <field name="report_type">qweb-pdf</field>
        <field name="report_name">solvera_custom_report_alba.report_invoice_alba_action</field>
        <field name="report_file">solvera_custom_report_alba.report_invoice_alba_action</field>
        <field name="print_report_name">(object._get_report_base_filename())</field>
        <field name="attachment">(object.state == 'posted') and ((object.name or 'INV').replace('/','_')+'.pdf')</field>
        <field name="binding_model_id" ref="model_account_move"/>
        <field name="binding_type">report</field>
    </record>
