<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="uom_form_views_inherit" model="ir.ui.view">
        <field name="name">uom.form.views.inherit</field>
        <field name="model">uom.uom</field>
        <field name="inherit_id" ref="uom.product_uom_form_view"/>
        <field name="arch" type="xml">
            <field name="name" position="after">
                <field name='uom_description'/>
            </field>
        </field>

    </record>
    <record id="uom_tree_views_inherit" model="ir.ui.view">
        <field name="name">uom.tree.views.inherit</field>
        <field name="model">uom.uom</field>
        <field name="inherit_id" ref="uom.product_uom_tree_view"/>
        <field name="arch" type="xml">
            <field name="name" position="after">
                <field name='uom_description'/>
            </field>
        </field>

    </record>
</odoo>




